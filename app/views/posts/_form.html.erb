  <div class="field form-group mb-3">
    <%= form.label :thumbnail %>
    <%= form.file_field :thumbnail , class:"form-control" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :banner %>
    <%= form.file_field :banner , class:"form-control" %>
  </div>

