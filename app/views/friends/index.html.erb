<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0 d-flex">
          <h6 class="me-10">Friends table</h6>
          <%= link_to '', new_friend_path, class:"btn btn-secondary btn-round btn-sm fas fa-plus" %>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User Name</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Phone</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Twitter</th>
                  <th class="text-secondary opacity-7">Action</th>
                </tr>
              </thead>
              <tbody>
                <% @friends.each do |friend| %>
                  <% if friend.user == current_user %>
                    <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          <div>
                            <%# <%= image_tag(friend.avatar, class:"avatar avatar-sm me-3") %>
                          </div>
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                            <%= friend.first_name %> &nbsp <%= friend.last_name %> </h6>
                            <p class="text-xs text-secondary mb-0"><%= friend.email %></p>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs text-secondary mb-0"><%= friend.phone %></p>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <p class="text-xs text-secondary mb-0"><%= friend.twitter %></p>
                      </td>
                      <td class="align-middle">
                        <%= link_to '', friend, class:"fas fa-eye me-2" %>
                        <%= link_to '', edit_friend_path(friend), class:"fas fa-edit me-2" %>
                        <%= link_to '', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"fas fa-trash" %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
