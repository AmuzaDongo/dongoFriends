
<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
      <div class="col-12">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg blur blur-rounded top-0 z-index-9 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
          <div class="container-fluid">
          <%= link_to 'dongoFriends', root_path, class:"navbar-brand font-weight-bolder ms-lg-0 ms-3" %>
            <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon mt-2">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </span>
            </button>
            <div class="collapse navbar-collapse" id="navigation">
              <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                  <%= link_to 'Home', root_path, class:"nav-link me-2" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Posts', posts_path, class:"nav-link me-2" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Friends', friends_path, class:"nav-link me-2" %>
                  </li>
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to 'Add Friends', new_friend_path, class:"nav-link me-2" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"nav-link me-2" %>
                  </li>
                  <ul class="navbar-nav d-lg-block d-none">
                    <li class="nav-item">
                      <%= link_to image_tag(current_user.avatar_thumbnail, class:"profile me-1") + '', edit_user_registration_path %>
                    </li>
                  </ul>
                <%end%>
              </ul>
              <% if !user_signed_in? %>
                <ul class="navbar-nav d-lg-block d-none">
                  <li class="nav-item">
                    <%= link_to 'Login', new_user_session_path, class:"btn btn-sm btn-round mb-0 me-1 bg-gradient-dark" %>
                  </li>
                </ul>
              <%end%>
            </div>
          </div>
        </nav>
        <!-- End Navbar -->
      </div>
    </div>
  </div>